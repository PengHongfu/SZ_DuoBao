<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="150dp"
        android:layout_height="100.0dip"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/iv_goods_img"
        android:layout_toRightOf="@+id/iv_goods_img"
        android:text="iphone5s" />

    <LinearLayout
        android:layout_alignLeft="@+id/linear2"
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_goods_name"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/iv_goods_img"
        android:layout_toRightOf="@+id/iv_goods_img"
        >

        <ProgressBar
            android:id="@+id/tv_goods_progress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            />
        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100  coins" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/linear1"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/iv_goods_img"
        android:layout_toRightOf="@+id/iv_goods_img">

        <ImageButton
            android:id="@+id/ib_goods_add"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"
            android:background="#00000000"
            android:src="@drawable/buycar01"
            android:scaleType="fitCenter"
            />

        <Button
            android:id="@+id/bt_goods_buy"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@drawable/corners_bg"
            android:text="立即夺宝"
            android:textColor="@color/color_white" />
    </LinearLayout>

</RelativeLayout>