<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_red7"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/slideView"
                android:layout_width="match_parent"
                android:layout_height="160.0dip">

                <android.support.v4.view.ViewPager
                    android:id="@+id/myviewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/dotLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <View
                        android:id="@+id/v_dot1"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/point_pressed" />

                    <View
                        android:id="@+id/v_dot2"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/point_unpressed" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#EEEEEE"></LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <RadioGroup
                    android:id="@+id/goods_list_rg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="4dp">

                    <RadioButton

                        android:id="@+id/rb_goods_one"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:checked="true"
                        android:paddingBottom="5dp"
                        android:gravity="center_horizontal|bottom"
                        android:text="人气"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_goods_two"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:checked="true"
                        android:paddingBottom="5dp"
                        android:gravity="center_horizontal|bottom"
                        android:text="最新"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_goods_three"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:checked="true"
                        android:paddingBottom="5dp"
                        android:gravity="center_horizontal|bottom"
                        android:text="进度"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_goods_four"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:checked="true"
                        android:paddingBottom="5dp"
                        android:gravity="center_horizontal|bottom"
                        android:text="总需人数"
                        android:textSize="16sp" />
                    <RadioButton
                        android:id="@+id/rb_goods_five"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:checked="true"
                        android:paddingBottom="5dp"
                        android:gravity="center_horizontal|bottom"
                        android:text="其他"
                        android:textSize="16sp" />
                </RadioGroup>
            </HorizontalScrollView>

            <FrameLayout
                android:id="@+id/doubao_goods_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
